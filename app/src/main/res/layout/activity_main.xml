<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:id="@+id/head"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    >

    <Button

        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_weight="1"
        android:text="三年二班"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button

        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>

<TextView
    android:id="@+id/center"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/head"
    android:layout_width="10dp"
    android:layout_height="match_parent" />

<RelativeLayout
    android:layout_below="@+id/head"
    android:layout_toRightOf="@+id/center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lin_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>

<TextView
    android:text="灯光控制"
    android:layout_below="@id/lin_mode"
    android:id="@+id/tv_lamp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<android.support.v7.widget.RecyclerView
    android:id="@+id/rec_lamp"
    android:layout_below="@+id/tv_lamp"
    android:layout_width="match_parent"
    android:layout_height="50dp">

</android.support.v7.widget.RecyclerView>

    <TextView
        android:text="空调控制"
        android:layout_below="@+id/rec_lamp"
        android:id="@+id/tv_airc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<android.support.v7.widget.RecyclerView
    android:id="@+id/rec_airc"
    android:layout_below="@+id/tv_airc"
    android:layout_width="wrap_content"
    android:layout_height="50dp">

</android.support.v7.widget.RecyclerView>

    <TextView
        android:text="窗帘控制"
        android:id="@+id/tv_curtain"
        android:layout_below="@+id/rec_airc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/tv_curtain"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/rec_curtain">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:text="其他"
        android:id="@+id/tv_other"
        android:layout_below="@+id/rec_curtain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_other"
        android:id="@+id/rec_other"
        ></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_other"
        android:layout_below="@+id/rec_other"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/rec_other2"
        android:layout_below="@+id/lin_other"
        ></android.support.v7.widget.RecyclerView>


</RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/head"
        android:layout_toLeftOf="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </RelativeLayout>


</RelativeLayout>